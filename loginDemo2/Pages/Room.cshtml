@page
@model MyApp.Namespace.RoomModel

<h2 class="mb-4">New Room</h2>

<form method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="RoomName" class="form-label">Name</label>
        <input type="text" class="form-control" id="RoomName" name="RoomName" value="@Model.rooms.RoomName" required>
        <div class="invalid-feedback">
            Please provide a name.
        </div>
    </div>
    <div class="mb-3">
        <label for="Capacity" class="form-label">Capacity</label>
        <input type="text" class="form-control" id="Capacity" name="Capacity" value="@Model.rooms.Capacity" required>
        <div class="invalid-feedback">
            Please provide a capacity.
        </div>
    </div>
    
</div>

<button type="submit" class="btn btn-primary">Submit</button>
</form>

<style>
    h2 {
        color: #333;
        font-size: 24px;
    }

    .form-label {
        font-weight: bold;
        color: #666;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        width: 250px; /* Form alanlarının genişliği */
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }

    .invalid-feedback {
        color: #dc3545;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    /* Form etiketlerinin genişliği */
    label {
        width: 100px;
    }

    /* Form butonunun sağa yaslması */
    button[type="submit"] {
        margin-left: auto;
        display: block;
    }
</style>

<script>
    // Form validasyonu için JavaScript kodu
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
